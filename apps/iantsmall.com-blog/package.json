  "devDependencies": {
    "prettier": "^2.8.8",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "eslint": "^8.57.0",
    "gatsby-plugin-compile-es6-packages": "^2.1.1",
    "typescript": "^5.3.3"
